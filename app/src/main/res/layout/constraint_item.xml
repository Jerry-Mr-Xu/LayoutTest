<?xml version="1.0" encoding="utf-8"?>

<com.jerry.layouttest.LogConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp"
    tools:parentTag="com.jerry.layouttest.LogConstraintLayout">

    <ImageView
        android:id="@+id/iv_pic_1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="#f88"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="文案文案文案文案"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/iv_first_tag_1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/iv_pic_1"
        app:layout_constraintTop_toTopOf="@+id/iv_pic_1" />

    <ImageView
        android:id="@+id/iv_first_tag_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="4dp"
        android:src="#88f"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_text_1"
        app:layout_constraintEnd_toStartOf="@+id/iv_second_tag_1"
        app:layout_constraintStart_toEndOf="@+id/tv_top_text_1"
        app:layout_constraintTop_toTopOf="@+id/tv_top_text_1" />

    <ImageView
        android:id="@+id/iv_second_tag_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="4dp"
        android:src="#88f"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_text_1"
        app:layout_constraintEnd_toStartOf="@+id/iv_third_tag_1"
        app:layout_constraintStart_toEndOf="@+id/iv_first_tag_1"
        app:layout_constraintTop_toTopOf="@+id/tv_top_text_1" />

    <ImageView
        android:id="@+id/iv_third_tag_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="4dp"
        android:src="#88f"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_second_tag_1"
        app:layout_constraintTop_toTopOf="@+id/tv_top_text_1" />

    <TextView
        android:id="@+id/tv_center_text_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="文案文案文案文案文案文案文案文案文案文案文案文案文案文案文案文案文案文案"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_top_text_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_text_1" />

    <TextView
        android:id="@+id/tv_bottom_left_text_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="文案文案文案文案"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic_1"
        app:layout_constraintEnd_toStartOf="@+id/tv_bottom_right_text_1"
        app:layout_constraintStart_toStartOf="@+id/tv_center_text_1" />

    <TextView
        android:id="@+id/tv_bottom_right_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="文案"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bottom_left_text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_bottom_left_text_1" />
</com.jerry.layouttest.LogConstraintLayout>